<h2>Books</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td style="width:10%">
        <%= link_to user_path(book.user.id) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: "pull-left profile-thumb" %>
        <% end %>
      </td>
      <td style="width:20%"><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
      <td style="width:70%"><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>